);

my $wordlist = 'basic';

GetOptions(
    'help|h|?'     => \&emit_help,
    'wordlist|w=s' => \$wordlist,
) or exit 64;

die "sapgli: no such wordlist '$wordlist' (basic|combined|voa)\n"
  unless exists $patterns{$wordlist};

shift @ARGV if @ARGV == 1 and $ARGV[0] eq '-';

while (readline) {
    s/\b$patterns{$wordlist}\b/hilight($1)/eg;
    print;
}

sub emit_help {
    warn <<"END_USAGE";
Usage: sapgli [-w list] [files|-]

Indicates whether input text belongs to simple English, as defined by a
particular word list, one of basic (the default) or combined or voa.

  ... | sapgli -w combined | less -R

END_USAGE
    exit 64;
}

sub hilight {
    my ($word) = @_;
    # 0 normal 1 bold 4 underline see for other possibilities
    # http://invisible-island.net/xterm/ctlseqs/ctlseqs.html
    return "\e[1m" . $word . "\e[0m";
}
